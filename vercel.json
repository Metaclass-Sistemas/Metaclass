{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "redirects": [
    {
      "source": "/beautygest",
      "destination": "https://beautygest.metaclass.com.br",
      "permanent": true
    },
    {
      "source": "/beautygest/:path*",
      "destination": "https://beautygest.metaclass.com.br/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
